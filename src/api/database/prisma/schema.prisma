generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  enterprise String
  userName   String
  email      String    @unique
  password   Password?
  sales      Sale[]
  createdAt  DateTime  @default(now())
}

model Password {
  id     String @id @default(uuid())
  pass   String
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Session {
  id       String  @id @default(uuid())
  email    String  @unique
  userName String
  valid    Boolean @default(true)
}

model Sale {
  id            String       @id @default(uuid())
  movementType  String
  operationType String?
  bankEntity    String?
  debitNote     String?
  description   String?
  totalAmount   Decimal
  createdAt     DateTime     @default(now())
  user          User         @relation(fields: [userId], references: [id])
  userId        String
  movement      MovementType @relation(fields: [movementId], references: [id])
  movementId    String
}

model MovementType {
  id     String @id @default(uuid())
  nameEs String
  nameEn String
  sales  Sale[]
}
